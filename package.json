{
	"name": "cucumber-xray-connector",
	"displayName": "cucumber-xray-connector",
	"description": "Cucumber Xray Connector",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "cucumber-xray-connector.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "cucumber-xray-connector.refresh-test-suite",
				"title": "Refresh Test Suites",
				"icon": "$(repo-sync)"
			},
			{
				"command": "cucumber-xray-connector.download-feature",
				"title": "Download feature",
				"icon": "$(cloud-download)"
			},
			{
				"command": "cucumber-xray-connector.link-feature",
				"title": "Link feature",
				"icon": "$(link)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "cucumber-explorer",
					"title": "Cucumber explorer",
					"icon": "resources/cucumber_bn.svg"
				}
			]
		},
		"views": {
			"cucumber-explorer": [
				{
					"id": "feature_treeview",
					"name": "Features"
				},
				{
					"id": "testsuite_treeview",
					"name": "Test Suites"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "cucumber-xray-connector.refresh-test-suite",
					"when": "view == testsuite_treeview",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "cucumber-xray-connector.download-feature",
					"when": "view == testsuite_treeview && viewItem == LEAF",
					"group": "inline"
				},
				{
					"command": "cucumber-xray-connector.link-feature",
					"when": "view == testsuite_treeview && viewItem == LEAF",
					"group": "inline"
				}
			]
		},
		"configuration": {
			"title": "Cucumber Xray Connector",
			"properties": {
				"cucumber-xray-connector.features.path": {
					"type": "string",
					"default": "code/config_test/e2e/definitions/cypress/cypress/integration",
					"description": "Cucumber features path location"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/vscode": "^1.63.0",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"@vscode/test-electron": "^2.0.3",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"ts-loader": "^9.2.6",
		"typescript": "^4.5.4",
		"webpack": "^5.66.0",
		"webpack-cli": "^4.9.1"
	},
	"dependencies": {
		"adm-zip": "^0.5.9",
		"axios": "^0.25.0",
		"md5": "^2.3.0"
	}
}
